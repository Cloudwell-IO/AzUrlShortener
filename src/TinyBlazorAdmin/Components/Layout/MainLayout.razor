@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <img class="siteLogo" src="/images/CloudwellGo-site-logo.png" height="36" alt="Cloudwell Go Admin Logo" />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
    <div class="footer-line">
        © <a href="https://cloudwell.io" target="_blank" class="footer-link">Cloudwell</a>  |  Cloudwell Go  |  Internal Use Only  |  Need help? <a href="mailto:info@cloudwell.io" class="footer-link">Contact info@cloudwell.io</a>
    </div>
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
<FluentToastProvider @rendermode="RenderMode.InteractiveServer" />
<FluentTooltipProvider @rendermode="RenderMode.InteractiveServer" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    public DesignThemeModes Mode { get; set; }
    public OfficeColor? OfficeColor { get; set; }
}